<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="my_friends" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>entity.Friend</class>
			
	    <properties>
	      <!-- some properties needed by persistence provider:
	        - driver
	        - db url
	        - db user name
	        - db user password -->
	      <property name="javax.persistence.target-database" value="PostgreSQL"/>
	      <property name="javax.persistence.logging.level" value="INFO"/>
	      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
	      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/my_friends"/>
	      <property name="javax.persistence.jdbc.user" value="postgres"/>
	      <property name="javax.persistence.jdbc.password" value="password"/>
	      <!-- for testing purpose every time application is launched drop and create tables
	        in production mode - this line should be removed or commented out
	      
	      <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
	 		-->
	    </properties>
		
	</persistence-unit>
</persistence>
